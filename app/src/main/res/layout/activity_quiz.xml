<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.QuizActivity"
        android:background="@color/background"
        android:padding="10dp">

    <ImageView
            android:src="@drawable/backgroundbubbles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_view_background"
            android:scaleType="center"
            android:contentDescription="@string/img_background_bubbles"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
            android:id="@+id/linear_layout_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:id="@+id/text_view_score"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                tools:text="Score: "/>

        <TextView
                android:id="@+id/text_view_question"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:gravity="center_vertical"
                tools:text="Pregunta"/>

        <com.google.android.material.button.MaterialButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/button_option1"
                android:tag="@string/button_option1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".7"
                tools:text="@string/button_option1"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textAllCaps="false"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="13dp"
                app:strokeColor="#48648E"
                app:strokeWidth="6dp"/>

        <com.google.android.material.button.MaterialButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/button_option2"
                android:tag="@string/button_option2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".7"
                tools:text="@string/button_option2"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textAllCaps="false"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="13dp"
                app:strokeColor="#48648E"
                app:strokeWidth="6dp"/>

        <com.google.android.material.button.MaterialButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/button_option3"
                android:tag="@string/button_option3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".7"
                tools:text="@string/button_option3"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textAllCaps="false"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="13dp"
                app:strokeColor="#48648E"
                app:strokeWidth="6dp"/>

        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                tools:progress="50"
                android:progressBackgroundTint="@android:color/white"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>